@model Kitchen.ViewModel1.OrderDishesViewModel
@{
    ViewData["Title"] = "Complete Your Order";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
    <style>
        .total-price-badge {
            font-size: 1.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 2rem;
        }

        .order-table th, .order-table td {
            vertical-align: middle;
            text-align: center;
        }

        .order-table th {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body class="bg-light py-4">
    <div class="container">
        <h2 class="text-center mb-5">📝 Complete Your Order</h2>
        <form id="orderForm" asp-action="OrderDetails" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <!-- Customer Info -->
                <div class="col-md-6">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Customer Information</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label asp-for="customername" class="form-label">Name</label>
                                <input asp-for="customername" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="customeraddress" class="form-label">Address</label>
                                <input asp-for="customeraddress" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="customerphone" class="form-label">Phone Number</label>
                                <input asp-for="customerphone" class="form-control" required />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Order Details -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center bg-success text-white">
                            <h4 class="mb-0">Order Details</h4>
                            <span class="badge bg-warning text-dark total-price-badge" id="totalPrice">Total: 0 EGP</span>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-bordered order-table m-0">
                                <thead>
                                    <tr>
                                        <th>Dish ID</th>
                                        <th>Dish Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody id="orderDetailsTable">
                                    <!-- Will be populated by JS -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Hidden input for order JSON -->
            <input type="hidden" id="orderDetailsInput" name="OrderDetailsJson" />
            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-lg btn-success px-5">
                    <i class="bi bi-check-circle me-2"></i>Confirm Order
                </button>
                <a href="/Order/SelectDishes" class="btn btn-lg btn-outline-secondary ms-3 px-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dishes
                </a>
            </div>
        </form>
    </div>
</body>
</html>
