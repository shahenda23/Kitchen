  @model Kitchen.ViewModel1.OrderDishesViewModel

<h2>Create Order</h2>

<form asp-action="CreateOrder" method="post">
    <div class="form-group">
        <label asp-for="customername"></label>
        <input asp-for="customername" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="customeraddress"></label>
        <input asp-for="customeraddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="customerphone"></label>
        <input asp-for="customerphone" class="form-control" />
    </div>

    <h3>Selected Dishes</h3>

    @if (Model.OrderDetails != null && Model.OrderDetails.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Dish ID</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dish in Model.OrderDetails)
                {
                    <tr>
                        <td>@dish.DishId</td>
                        <td>@dish.Price</td>
                        <td>@dish.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No dishes selected yet.</p>
    }

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
