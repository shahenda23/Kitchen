@{
    ViewData["Title"] = "Order Success";
}

<div class="container text-center mt-5">
    <div class="card p-5 shadow">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>

        <h1 class="display-4">Thank You!</h1>
        <p class="lead mb-4">Your order has been successfully placed.</p>

        <div class="alert alert-success">
            Our team is preparing your delicious dishes right now.
        </div>

        <div class="mt-4">
            <a href="/Order/SelectDishes" class="btn btn-primary btn-lg">
                <i class="bi bi-basket-fill me-2"></i>Order More Food
            </a>
            <a href="/" class="btn btn-outline-secondary btn-lg ms-2">
                <i class="bi bi-house-door me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>

<script>
    // Clear the cart after successful order
    window.onload = function() {
        sessionStorage.removeItem("currentOrder");
    }
</script>