@using Kitchen.ViewModel
@model AllStaffWithPagesViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div style="margin-top:30px; position: relative;">
    <h1 style="text-align:center">STAFF</h1>

    <!-- Left Arrow -->
    <a href="@Url.Action("All", "Staff", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })"
       class="pagination-arrow left-arrow @(Model.CurrentPage == 1 ? "disabled" : "")"
       style="@(Model.CurrentPage == 1 ? "pointer-events:none; opacity:0.5" : "")">
        &lt;
    </a>

    <div class="row" style="padding-top:30px; margin: 0 50px;">
        @foreach (var item in Model.allStaff)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg rounded-4 border-0 card-hover" style="background-color:transparent">
                    @if (item.Id == 5)
                    {
                        <img src="~/Images/c1.png" class="card-img-top" style="height: 250px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;" alt="@item.Name" />
                    }
                    else if (item.Id == 6)
                    {
                        <img src="~/Images/c3.png" class="card-img-top" style="height: 250px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;" alt="@item.Name" />
                    }
                    else if (item.Id == 7)
                    {
                        <img src="~/Images/c2.png" class="card-img-top" style="height: 250px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;" alt="@item.Name" />
                    }
                    else
                    {
                        <img src="~/Images/c4.png" class="card-img-top" style=" object-fit: cover;width:100%; border-top-left-radius: 1rem; border-top-right-radius: 1rem;" alt="@item.Name" />
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-right">@item.Name</h5>
                        <p class="text-muted text-right mb-4">@item.Position</p>
                    </div>
                    <div class="card-overlay">
                        <div class="social-icons">
                            <a href="https://www.facebook.com/" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://www.instagram.com/" class="social-icon">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="/Staff/Details?Id=@item.Id" class="social-icon">
                                <i class="fa-solid fa-info"></i>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

    <!-- Right Arrow -->
    <a href="@Url.Action("All", "Staff", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })"
       class="pagination-arrow right-arrow @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
       style="@(Model.CurrentPage == Model.TotalPages ? "pointer-events:none; opacity:0.5" : "")">
        &gt;
    </a>
</div>

<style>
    .card-hover {
        transition: all 0.3s ease;
    }

        .card-hover:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2) !important;
        }

    .button-81 {
        background-color: #1e293b;
        border: 0 solid #e2e8f0;
        border-radius: 1.5rem;
        box-sizing: border-box;
        color: #ffff;
        cursor: pointer;
        width: 300px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        font-family: "Basier circle",-apple-system,system-ui,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        font-size: 1.1rem;
        font-weight: 600;
        line-height: 1;
        padding: 1rem 1.6rem;
        text-align: center;
        text-decoration: none #0d172a solid;
        text-decoration-thickness: auto;
        transition: all .1s cubic-bezier(.4, 0, .2, 1);
        box-shadow: 0px 1px 2px rgba(166, 175, 195, 0.25);
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        align-self: center;
    }

        .button-81:hover {
            background-color: #1e293b;
            color: white;
        }

    .pagination-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 40px;
        height: 80px;
        color: #333333;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
        text-decoration: none;
        border-radius: 4px;
        transition: all 0.3s ease;
        z-index: 10;
    }



        .pagination-arrow.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .left-arrow {
        left: 10px;
    }

    .right-arrow {
        right: 10px;
    }

    .card {
        position: relative;
        width: 300px;
        height: 200px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        overflow: hidden; /* Ensures overlay stays within card bounds */
    }

    .card-content {
        padding: 20px;
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        bottom:0;
        right:0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Semi-dark overlay */
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card:hover .card-overlay {
        opacity: 1;
    }

    .social-icons {
        display: flex;
        gap: 30px;
    }

    .social-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        transition: all 0.3s ease;
        color: #333;
        text-decoration: none;
    }

        .social-icon:hover {
            transform: scale(1.1);
            background: white;
        }

        .social-icon i {
            font-size: 20px;
        }

        .social-icon:hover i.fa-facebook-f {
            color: #1877F2; /* Facebook blue */
        }

        .social-icon:hover i.fa-instagram {
            color: #E1306C; /* Instagram pink */
        }

        .social-icon:hover i.fa-info {
            color: #624e3b; /* Instagram pink */
        }
</style>