@model List<Kitchen.Models.Feedback>

@{
    ViewData["Title"] = "All Feedbacks";
}

<h2>All Feedbacks</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Feedback ID</th>
            <th>Comment</th>
            <th>Rate</th>
            <th>Customer</th>
            <th>Order ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.Id</td>
                <td>@feedback.Comment</td>
                <td>@feedback.Rate</td>
                <td>@(feedback.Customer?.Name ?? "N/A")</td>
                <td>@feedback.OrderId</td>
            </tr>
        }
    </tbody>
</table>

