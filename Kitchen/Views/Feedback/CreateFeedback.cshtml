@model FeedbackViewModel
<h1>Add your Feedback</h1>

<form asp-action="SubmitFeedback" method="post" asp-controller="Feedback">
    <div>
        <label asp-for="Comment"></label>
        <input class="form form-control" asp-for="Comment" />
        <span asp-validation-for="Comment" id="nameError" class="text-danger"></span>
    </div>

    <input type="hidden" name="Customer_ID" value="@Model.CustomerId" />

    <label>Rating:</label>
    <div class="star-rating">
        <input type="radio" id="star5" name="orderrate" value="5" onclick="showRatingMessage(5)"><label for="star5">★</label>
        <input type="radio" id="star4" name="orderrate" value="4" onclick="showRatingMessage(4)"><label for="star4">★</label>
        <input type="radio" id="star3" name="orderrate" value="3" onclick="showRatingMessage(3)"><label for="star3">★</label>
        <input type="radio" id="star2" name="orderrate" value="2" onclick="showRatingMessage(2)"><label for="star2">★</label>
        <input type="radio" id="star1" name="orderrate" value="1" onclick="showRatingMessage(1)"><label for="star1">★</label>
    </div>

    <p id="rating-message" class="rating-text"></p>
    
    <script>
        function showRatingMessage(starValue) {
            let message = "";
            switch (starValue) {
                case 1:
                    message = "Disappointing";
                    break;
                case 2:
                    message = "Not so good";
                    break;
                case 3:
                    message = "It was alright";
                    break;
                case 4:
                    message = "Pretty Good";
                    break;
                case 5:
                    message = "Excellent!";
                    break;
            }
            document.getElementById("rating-message").textContent = message;
        }
    </script>

    <input type="hidden" name="OrderId" value="@Model.OrderId">

    <button type="submit">Submit Feedback</button>
</form>
<style>
    .rating-text {
        text-align: center;
        font-size: 20px;
        color: black;
        margin-top: 10px; 
    }

    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            font-size: 30px;
            color: gray;
            cursor: pointer;
        }

        .star-rating input:checked ~ label {
            color: gold;
        }

        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: gold;
        }

</style>
