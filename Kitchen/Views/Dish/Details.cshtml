@model Kitchen.Models.Dish

@{
    ViewData["Title"] = "Dish Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="~/Images/@Model.Image" alt="@Model.Name" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;" />
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <div class="mt-4">
                        @if (User.IsInRole("2"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        }
                        <a asp-action="All" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
